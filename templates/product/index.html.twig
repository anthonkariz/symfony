{% extends 'base.html.twig' %}

{% block title %}Products
{% endblock %}

{% block body %}
	<h1 class="text-2xl font-bold my-3">
		- Products
	</h1>

	<div class="w-full flex flex-wrap">
		{% for product in products %}

			<div class="flex justify-center items-center mt-8 md:w-1/4 bg-slate-300 gap-x-3">
				<div class="max-w-sm rounded overflow-hidden shadow-lg mx-4 my-2">

					{% if product.getOneToMany() is not empty %}

						<img src="{{ asset('uploads/' ~ product.getOneToMany().first.image) }}"/>

					{% else %}
						<img src="https://placehold.co/400"/>
					{% endif %}
					<div class="px-6 py-4">
						<div class="font-bold text-xl mb-2">{{product.product}}</div>
					</div>

					<div class="px-6 py-4">
						<a class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" href="/products/single/{{product.id}}">
							View All
						</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>

{% endblock %}
